<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kishan.homework2.battleScreen">

    <Button
        android:id="@+id/executeTurnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/execute_turn_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.032"
        android:layout_marginRight="233dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/char1Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attack_button"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/charInfo1"
        app:layout_constraintRight_toLeftOf="@+id/char2Attack"
        android:layout_marginRight="301dp" />

    <Button
        android:id="@+id/char1Heal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heal_button"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/char1Attack"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/char2Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attack_button"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/charInfo2"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/char2Heal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heal_button"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/char2Attack"
        app:layout_constraintLeft_toRightOf="@+id/char1Heal"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/charInfo2"
        android:layout_width="169dp"
        android:layout_height="88dp"
        android:text="TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/executeTurnButton"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/charInfo1"
        android:layout_width="169dp"
        android:layout_height="88dp"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="-26dp"
        app:layout_constraintTop_toBottomOf="@+id/executeTurnButton" />

    <TextView
        android:id="@+id/actionSelected"
        android:layout_width="182dp"
        android:layout_height="107dp"
        android:text="@string/select_actions"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp" />

    <ProgressBar
        android:id="@+id/char1Health"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="31dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/charInfo2"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/char2Health"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="31dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/charInfo1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
